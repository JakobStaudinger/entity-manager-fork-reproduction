{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": [],
    "strict": true,
    "moduleResolution": "node",
    "types": ["jest"],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
